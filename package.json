{
  "name": "transient-tags-action",
  "version": "1.0.0",
  "description": "GitHub Action for generating transient tags from the latest repository version",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc && ncc build",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "test": "jest --coverage",
    "lint": "eslint src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/purpleclay/transient-tags-action.git"
  },
  "keywords": [
    "github",
    "actions",
    "semver",
    "transient-tags",
    "golang",
    "go"
  ],
  "author": "purpleclay",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/purpleclay/transient-tags-action/issues"
  },
  "homepage": "https://github.com/purpleclay/transient-tags-action",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1",
    "@actions/tool-cache": "^2.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.0",
    "@types/tmp": "^0.2.3",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.39.0",
    "jest": "^29.5.0",
    "jest-circus": "^29.5.0",
    "prettier": "^2.8.8",
    "tmp": "^0.2.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
